<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Hassane SIDI AMMI">
    <title>{% block title %}Hello Shop!{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('global') }}
    {% endblock %}
</head>
<body>
{% block header %}
    <header class="mb-5">
        {% include 'includes/_navbar.html.twig' %}
    </header>
{% endblock %}
