    <div class="row pt-md-3 pt-lg-5">
        {% include 'includes/_alerts.html.twig' %}
        {% block body %}
        {% endblock body %}
    </div>
</main>

<footer class="container py-5 mt-4">
    {% include 'includes/_footer.html.twig' %}
</footer>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>